{
  "$schema": "./skills.schema.json",
  "version": "2.0.0",
  "description": "AI Gent Workflow - Function-based Skill System",

  "philosophy": {
    "principles-over-code": "Skills focus on principles, patterns, and guidelines—not specific code examples",
    "framework-agnostic": "Skills apply to any framework, library, or technology stack",
    "load-on-need": "Skills load based on user context and keywords, not by default"
  },

  "structure": {
    "design": "Visual design principles - spacing, typography, colors, responsive, animations",
    "ux": "User experience patterns - feedback, accessibility, usability",
    "frontend": "Frontend implementation - React, Vue, performance (future)",
    "backend": "Backend patterns - API design, database, security (future)",
    "architecture": "Universal patterns - error handling, testing, best practices (future)"
  },

  "loading-strategy": {
    "context-detection": {
      "design-tasks": {
        "keywords": ["page", "component", "UI", "layout", "style", "design", "spacing", "color"],
        "load-skills": ["design/fundamentals"]
      },
      "ux-tasks": {
        "keywords": ["form", "button", "feedback", "loading", "error", "accessibility", "a11y"],
        "load-skills": ["ux/feedback-patterns", "ux/accessibility"]
      },
      "responsive-tasks": {
        "keywords": ["responsive", "mobile", "tablet", "breakpoint", "touch"],
        "load-skills": ["design/responsive"]
      },
      "animation-tasks": {
        "keywords": ["animation", "transition", "micro-interaction", "polish", "easing"],
        "load-skills": ["design/animations"]
      },
      "figma-tasks": {
        "keywords": ["figma", "design file", "mockup", "figma link", "figma url"],
        "load-skills": ["design/figma-extraction"]
      },
      "theme-tasks": {
        "keywords": ["create page", "build UI", "tạo page", "new component"],
        "exclude-keywords": ["figma", "design file"],
        "load-skills": ["design/theme-factory"]
      }
    },
    "max-concurrent-skills": 3,
    "token-budget": 5000
  },

  "skill-registry": {
    "design": [
      {
        "name": "design-fundamentals",
        "path": "design/fundamentals/SKILL.md",
        "category": "design",
        "lines": 277,
        "description": "Spacing, typography, color, visual hierarchy principles",
        "keywords": ["spacing", "typography", "color", "design system"],
        "priority": "high"
      },
      {
        "name": "design-responsive",
        "path": "design/responsive/SKILL.md",
        "category": "design",
        "lines": 402,
        "description": "Mobile-first, breakpoints, fluid layouts, touch optimization",
        "keywords": ["responsive", "mobile", "breakpoint", "touch"],
        "priority": "medium"
      },
      {
        "name": "design-animations",
        "path": "design/animations/SKILL.md",
        "category": "design",
        "lines": 431,
        "description": "Animation timing, easing, micro-interactions, performance",
        "keywords": ["animation", "transition", "easing", "polish"],
        "priority": "low"
      },
      {
        "name": "figma-design-extraction",
        "path": "design/figma-extraction/SKILL.md",
        "category": "design",
        "lines": 385,
        "description": "Complete Figma design extraction - tokens, components, responsive specs. Ensures accurate implementation without re-fetching.",
        "keywords": ["figma", "design file", "mockup", "design system", "extraction"],
        "priority": "high"
      },
      {
        "name": "theme-factory",
        "path": "design/theme-factory/SKILL.md",
        "category": "design",
        "lines": 420,
        "description": "Generate cohesive UI themes when no design provided. Color theory, typography pairing, brand personality principles.",
        "keywords": ["theme", "generate theme", "color palette", "brand personality", "no design"],
        "priority": "medium"
      }
    ],
    "ux": [
      {
        "name": "ux-feedback-patterns",
        "path": "ux/feedback-patterns/SKILL.md",
        "category": "ux",
        "lines": 368,
        "description": "Loading, success, error, empty states - user feedback patterns",
        "keywords": ["loading", "error", "success", "feedback", "toast"],
        "priority": "high"
      },
      {
        "name": "ux-accessibility",
        "path": "ux/accessibility/SKILL.md",
        "category": "ux",
        "lines": 470,
        "description": "Keyboard navigation, screen readers, ARIA, contrast, WCAG",
        "keywords": ["accessibility", "a11y", "keyboard", "screen reader", "aria"],
        "priority": "high"
      }
    ]
  },

  "loading-examples": {
    "example-1": {
      "user-prompt": "tạo page login",
      "detected-context": "design + ux",
      "loaded-skills": ["design/fundamentals", "ux/feedback-patterns", "ux/accessibility"],
      "reason": "General UI task, load design + UX essentials"
    },
    "example-2": {
      "user-prompt": "tạo responsive header",
      "detected-keywords": ["responsive"],
      "loaded-skills": ["design/fundamentals", "design/responsive"],
      "reason": "Responsive keyword detected, load responsive skill"
    },
    "example-3": {
      "user-prompt": "/skill:animation",
      "manual-trigger": true,
      "loaded-skills": ["design/animations"],
      "reason": "Manual skill request via command"
    }
  },

  "skill-creation-principles": {
    "content-guidelines": [
      "Focus on PRINCIPLES, not code examples",
      "Framework and technology agnostic",
      "Explain WHY, not just WHAT",
      "Provide patterns and best practices",
      "Keep skills 200-500 lines maximum",
      "Use clear section structure",
      "Include validation checklists",
      "Avoid specific library/framework syntax"
    ],
    "what-to-avoid": [
      "Specific HTML/CSS/JavaScript code",
      "Framework-specific examples (React, Vue, Angular)",
      "Library-specific patterns (Tailwind, Material-UI)",
      "Code snippets that won't work in other contexts",
      "Technology-specific implementations"
    ],
    "what-to-include": [
      "Universal principles (contrast ratios, spacing scales)",
      "Design patterns (mobile-first, progressive enhancement)",
      "Best practices (semantic HTML, WCAG guidelines)",
      "Common mistakes and how to avoid them",
      "Validation checklists",
      "Why principles matter (context and reasoning)"
    ]
  },

  "future-expansions": {
    "planned-skills": [
      "frontend/react - React-specific patterns and best practices",
      "frontend/vue - Vue-specific patterns and best practices",
      "frontend/performance - Performance optimization techniques",
      "backend/api-design - REST/GraphQL API design principles",
      "backend/database - Database design and query optimization",
      "architecture/error-handling - Error handling patterns",
      "architecture/testing - Testing strategies and patterns"
    ]
  }
}
